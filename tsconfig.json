{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2020",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "lib": ["DOM", "ES2020", "ES2024"]
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"]
}
